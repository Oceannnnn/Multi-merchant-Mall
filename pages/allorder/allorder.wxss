/* pages/allorder/allorder.wxss */
@import "../../font/iconfont.wxss";
.nav-scroll{
  width: 100%;
  color: #BDBABB;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.scroll-view_H{
  white-space:nowrap;
  width: 100%;
  box-sizing: border-box;
}
.nav-name{
  display:inline-block;
  border-bottom: 2px solid transparent;
  width: 22%;
  text-align: center;
  padding: 30rpx 0;
}
.nav-hover{
  color: #E93D3B;
  border-bottom: 2px solid #E93D3B;
}
.items{
  width: 100%;
}
.body_scroll{
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 120rpx;
}
.choose_p{
  background: #F6F6F6;
  padding: 30rpx 20rpx;
}
.items_left{
  width: 160rpx;
  height: 160rpx;
}
.items_left image{
  width: 100%;
  height: 100%;
}
.items_right{
  width: 530rpx;
  height: 160rpx;
}
.new_price{
  font-size: 32rpx;
  color: #E82D2D;
}
.all{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.order-down{
  padding: 14rpx 30rpx;
  border: 1px solid #aeaeae;
  color: #555555;
  margin-right: 20rpx;
}
.order-on{
  border-color: #E83D3A;
  color: #E83D3A;
}
.pinShare{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
}
.order-time .iconfont{
  font-size: 40rpx;
}