/* pages/store/store.wxss */
@import '../listPage/listPage.wxss';
@import "../../font/iconfont.wxss";
view{
  overflow: visible;
}
.storeHeader{
  width: 100%;
  height:370rpx; 
}
.storeHeaderImage{
  width: 100%;
  height:100%; 
  position: absolute;
  left: 0;
  top: 0;
}
.storeHeaderFooter{
  width: 100%;
  height: 100%;
  bottom: 0;
  left: 0;
  position: absolute;
  background:rgba(0,0,0,0.4);
}
.header_img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
}
.storeitem{
  width: 50%;
  height: 100%;
}
.storeBody{
  height:100rpx;
}
.tabTit {
  position: relative;
}
.items-body{
  margin: 0 0 120rpx;
}
.on {
  border-left:4px solid #eee;
}
.storeFooter{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 10rpx 0;
}
.iconfont {
  font-size: 60rpx;
}
.collection{
  padding: 5rpx 20rpx;
  border: 1px solid #fff;
  border-radius: 10rpx;
}
.collection.active{
  border: 1px solid #EA5D34;
  color: #fff;
  background: #EA5D34;
}
.collection.active .iconfont{
  color: #fff;
}
.header_store{
  margin-top: 120rpx;
}