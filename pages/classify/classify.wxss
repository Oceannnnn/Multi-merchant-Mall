/* pages/classify/classify.wxss */
.scroll-view_H{
  height: 100vh;
  display: inline-block;
  width: 25%;
  background: #f5f5f5;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
}
.nav-name{
  padding: 14px 0;
}
.nav-name.nav-hover{
  background: #fff;
  color: #E93D3B;
  border-left: 3px solid #E93D3B;
}
.items{
  float: left;
  width: 50%;
  text-align: center;
}
.items image{
  width: 160rpx;
  height: 160rpx;
}
.nav_right{
/*右侧盒子使用了绝对定位*/
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  min-height: 100vh;
}